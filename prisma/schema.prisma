generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  user     String @unique
  password String

  todos    Todo[]

  @@map("Users")
}

model Todo {
  id      Int     @id @default(autoincrement())
  userId  String
  タスク String
  is完了   Boolean @default(false)

  User    User    @relation(fields: [userId], references: [id])

  @@map("Todos")
}